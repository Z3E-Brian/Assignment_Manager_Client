      </children>
   </HBox>
   <HBox alignment="CENTER" layoutX="40.0" layoutY="420.0" spacing="10.0">
      <children>
          <MFXButton fx:id="btnRegister" onAction="#onActionBtnRegister" style="-fx-pref-width: 300px; -fx-font-size: 16px;" styleClass="mfx-btn-Save" text="Registrarse" HBox.hgrow="ALWAYS">

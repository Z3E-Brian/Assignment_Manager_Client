<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="674.0" prefWidth="679.0" spacing="15.0" stylesheets="@../Style/Styles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.una.programmingIII.Assignment_Manager_Client.Controller.UserViewController">
   <HBox alignment="CENTER_LEFT">
      <Label style="-fx-font-size: 24px;" text="Gestión de Usuarios">
         <padding>
            <Insets left="15.0" />
         </padding>
      </Label>
   </HBox>
   <HBox fx:id="hBoxID" alignment="CENTER_LEFT" spacing="15.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
      <padding>
         <Insets left="15.0" />
      </padding>
      <Label text="ID:" />
      <MFXTextField fx:id="IDField" floatMode="ABOVE" prefHeight="30.0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="15.0" />
         </HBox.margin>
      </MFXTextField>
   </HBox>
   <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="ALWAYS">
      <padding>
         <Insets left="15.0" />
      </padding>

      <Label text="Identity Card Number:" />
      <MFXTextField fx:id="numberIDField" floatMode="ABOVE" prefHeight="30.0" prefWidth="456.0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="15.0" />
         </HBox.margin></MFXTextField>
   </HBox>
   <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="ALWAYS">
      <padding>
         <Insets left="15.0" />
      </padding>

      <Label text="Name:" />
      <MFXTextField fx:id="nameField" floatMode="ABOVE" prefHeight="30.0" prefWidth="581.0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="15.0" />
         </HBox.margin></MFXTextField>
   </HBox>
   <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="ALWAYS">
      <padding>
         <Insets left="15.0" />
      </padding>

      <Label text="Email:" />
      <MFXTextField fx:id="emailField" floatMode="ABOVE" prefHeight="30.0" prefWidth="584.0" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="15.0" />
         </HBox.margin></MFXTextField>
   </HBox>


   <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
      <padding>
         <Insets left="20.0" />
      </padding>

      <Button fx:id="createButton" onAction="#createUser" text="Crear" />
      <Button fx:id="updateButton" onAction="#updateUser" text="Actualizar" />
      <Button fx:id="deleteButton" onAction="#deleteUser" text="Eliminar" />
      <Button fx:id="getAllButton" onAction="#getAll" text="getAll" />
   </HBox>

   <TableView fx:id="userTable">
      <columns>
         <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
         <TableColumn fx:id="numberIDColumn" prefWidth="150" text="Número de Cédula" />
         <TableColumn fx:id="nameColumn" prefWidth="150" text="Nombre" />
         <TableColumn fx:id="emailColumn" prefWidth="200" text="Correo Electrónico" />
      </columns>
   </TableView>

</VBox>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" styleClass="jfx-panel-fondo" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.una.programmingIII.Assignment_Manager_Client.Controller.UniversityMaintenanceController">
   <stylesheets>
      <URL value="@../Style/Styles.css" />
   </stylesheets>
   <children>
      <VBox alignment="TOP_CENTER" layoutX="30.0" layoutY="30.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ToolBar prefHeight="40.0" prefWidth="800.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <items>
                  <HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefWidth="779.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="15.0" HBox.hgrow="ALWAYS">
                           <children>
                              <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../Assets/Assignment-Manager.png" />
                                 </image>
                              </ImageView>
                              <Label styleClass="Titles" text="Universities Maintainance" />
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" spacing="25.0" HBox.hgrow="ALWAYS">
                           <children>
                              <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../Assets/lupa.png" />
                                 </image>
                              </ImageView>
                              <ImageView fitHeight="25.0" fitWidth="20.0" layoutX="10.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../Assets/Delete.png" />
                                 </image>
                              </ImageView>
                           </children>
                           <HBox.margin>
                              <Insets right="20.0" />
                           </HBox.margin>
                        </HBox>
                     </children></HBox>
               </items>
            </ToolBar>
            <VBox>
               <children>
                  <HBox>
                     <children>
                        <HBox HBox.hgrow="ALWAYS">
                           <children>
                              <TableView fx:id="universityTable" onMousePressed="#onMousePressedUniversityTable" HBox.hgrow="ALWAYS">
                                 <columns>
                                    <TableColumn fx:id="idColumn" maxWidth="30.0" prefWidth="25.0" text="ID" />
                                    <TableColumn fx:id="nameColumn" prefWidth="150" text="Nombre" />
                                    <TableColumn fx:id="locationColumn" prefWidth="200" text="Ubicacion" />
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </HBox>
                        <HBox prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <MFXTextField fx:id="idTxf" floatingText="ID" prefWidth="126.0" />
                                    <MFXTextField fx:id="txfName" floatingText="Titulo Universidad" layoutX="10.0" layoutY="186.0" prefWidth="126.0" />
                                    <MFXTextField fx:id="txfLocation" floatingText="Ubicacion" layoutX="10.0" layoutY="210.0" prefWidth="126.0" />
                                 </children>
                                 <HBox.margin>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </HBox.margin>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <MFXButton fx:id="btnNew" onAction="#onActionBtnNew" prefHeight="50.0" prefWidth="150.0" styleClass="jfx-btn-nuevo" text="Crear">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="jfx-btn-nuevo" />
                           </graphic>
                        </MFXButton>
                        <MFXButton fx:id="btnDelete" layoutX="405.0" layoutY="10.0" onAction="#onActionBtnDelete" prefHeight="50.0" prefWidth="150.0" styleClass="jfx-btn-eliminar" text="Eliminar">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                        </MFXButton>
                        <MFXButton fx:id="btnEdit" layoutX="485.0" layoutY="10.0" onAction="#onActionBtnEditFaculties" prefHeight="50.0" prefWidth="150.0" styleClass="jfx-btn-guardar" text="Facultades">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                        </MFXButton>
                        <MFXButton fx:id="btnSave" layoutX="496.0" layoutY="15.0" onAction="#onActionBtnSave" prefHeight="50.0" prefWidth="150.0" styleClass="jfx-btn-guardar" text="Guardar">
                           <graphic>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
                           </graphic>
                        </MFXButton>
                     </children>
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>

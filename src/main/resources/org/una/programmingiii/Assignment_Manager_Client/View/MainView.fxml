<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainBorderPane" prefHeight="600.0" prefWidth="1000.0" stylesheets="@../Style/Styles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.una.programmingIII.Assignment_Manager_Client.Controller.MainViewController">
    <top>
        <VBox>
            <HBox prefHeight="30.0" prefWidth="50.0" spacing="10.0" styleClass="menu-bar">
                <ImageView fx:id="facebookIcon" fitHeight="24" fitWidth="24">
                    <Image url="@../Assets/Facebook-Icon.png" />
                </ImageView>
                <ImageView fx:id="instagramIcon" fitHeight="24" fitWidth="24">
                    <Image url="@../Assets/Instagram-Icon.png" />
                </ImageView>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="80.0" prefWidth="0.0" spacing="15" style="-fx-background-color: #3B4252;">
                <Label style="-fx-text-fill: white; -fx-font-size: 24px;" text="Aula UNA Virtual" />
                <Region HBox.hgrow="ALWAYS" />
                <MenuButton fx:id="coursesMenuButton" style="-fx-text-fill: white;" text="Courses">
                    <items>
                        <MenuItem fx:id="" text="Curso 1" />
                        <MenuItem text="Curso 2" />
                    </items>
                </MenuButton>
                <MenuButton style="-fx-text-fill: white;" text="Otras Aulas Virtuales">
                </MenuButton>
                <Button fx:id="imageButton" onAction="#onCustomUser" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fx:id="imageView" fitHeight="50" fitWidth="50">
                            <Image url="@../Assets/UserIcon.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <opaqueInsets>
                    <Insets />
                </opaqueInsets>
                <padding>
                    <Insets left="15.0" right="15.0" />
                </padding>
            </HBox>
        </VBox>
    </top>
    <center>
        <!-- Aquí se cargará dinámicamente el contenido de otras vistas -->
        <BorderPane fx:id="contentArea" />
    </center>
</BorderPane>
